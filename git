publish_to_artifactory:
  stage: publish
  script:
    - |
      # Utilisation directe du tag ou fallback sur le commit SHA
      RELEASE_NAME="${CI_COMMIT_TAG:-$CI_COMMIT_SHA}"

      # D√©finition du dossier cible sur Artifactory
      TARGET_PATH="$ARTIFACTORY_URL/$ARTIFACTORY_REPO/$RELEASE_NAME"

      echo "üìÇ Cr√©ation du dossier: $TARGET_PATH"

      # V√©rification des fichiers dans dist/
      echo "üîç V√©rification des fichiers dans dist/"
      ls -l dist/

      # Upload uniquement les fichiers zip et tar.gz
      for file in dist/*.{zip,tar.gz}; do
        if [ -f "$file" ]; then
          echo "‚¨ÜÔ∏è Upload de $file vers $TARGET_PATH"
          curl -u "$ARTIFACTORY_USER:$ARTIFACTORY_PASSWORD" \
            -T "$file" "$TARGET_PATH/$(basename "$file")"
        else
          echo "‚ö†Ô∏è Aucun fichier zip ou tar.gz trouv√© dans dist/"
        fi
      done
